#!/usr/bin/env bash

H='\033[0;31m' # Heart color
P='\033[0;35m' # PC color

echo -e "${P}
       _______________                        _______________ 
      |  ___________  |${H}      .-.     .-.     ${P}|  ___________  |
      | |           | |${H}     .****. .****.    ${P}| |           | |
      | |   0   0   | |${H}     .*****.*****.    ${P}| |   0   0   | |
      | |     -     | |${H}      .*********.     ${P}| |     -     | |
      | |   \___/   | |${H}       .*******.      ${P}| |   \___/   | |
      | |___     ___| |${H}        .*****.       ${P}| |___     ___| |
      |_____|\_/|_____|${H}         .***.        ${P}|_____|\_/|_____|
        _|__|/ \|_|_..............${H}*${P}............._|_|/ \|__|_
       / ********** \                          / ********** \\
     /  ************  \    peer-love-peer    /  ************  \\
    --------------------       network      --------------------"

# Restablecer color blanco
echo -e "\033[0;37m"
